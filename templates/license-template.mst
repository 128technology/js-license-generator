<!DOCTYPE html>
<html>
  <head>
    <style>
      #links-container {
        padding: 1rem;
        display: flex;
        flex-direction: row;
      }

      #names {
        flex: 0 0 auto;
      }

      #versions {
        flex: 1;
        padding-left: 5rem;
      }

      .col-header {
        font-size: 1.2rem;
      }

      .index {
        padding: 0.1rem 0;
      }

      .license-container {
        max-width: 1000px;
        padding: 0 1rem;
      }

      .license-container:nth-of-type(even) {
        background-color: #DFDFDF;
      }

      .license-body {
        padding: 1rem;
      }

      a {
        text-decoration: none;
        font-weight: bold;
      }

      a:visited {
        color: blue;
      }
    </style>
  </head>
  <body>
    <a id="top"></a>
    <div id="links-container">
      <div id="names">
        <div class="col-header">Dependency Names</div>
        {{#links}}
          <div class="index">
            <a href="#{{name}}">{{name}}</a>
          </div>
        {{/links}}
      </div>
      <div id="versions">
        <div class="col-header">Versions</div>
        {{#links}}
          <div class="index">
            {{version}}
          </div>
        {{/links}}
      </div>
    </div>
    {{#links}}
      <div class="license-container">
        <a href="#top" id="{{name}}">{{name}} - Version {{version}}</a>
        <div class="license-body">{{text}}</div>
      </div>
    {{/links}}
  </body>
</html>
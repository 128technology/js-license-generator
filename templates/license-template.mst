<!DOCTYPE html>
<html>
  <head>
    <style>
      #links-container {
        padding: 1rem;
        display: flex;
        flex-direction: row;
      }

      #names {
        flex: 0 0 auto;
      }

      #versions {
        flex: 1;
        padding-left: 5rem;
      }

      #license-body {
        padding: 1rem;
      }

      a {
        text-decoration: none;
        font-weight: bold;
      }

      a:visited {
        color: blue;
      }
    </style>
  </head>
  <body>
    <a id="top"></a>
    <div id="links-container">
      <div id="names">
        {{#links}}
          <div>
            <a href="#{{name}}">{{name}}</a>
          </div>
        {{/links}}
      </div>
      <div id="versions">
        {{#links}}
          <div>{{version}}</div>
        {{/links}}
      </div>
    </div>
    {{#links}}
      <a href="#top" id="{{name}}">{{name}} {{version}}</a>
      <div id="license-body">{{text}}</div>
    {{/links}}
  </body>
</html>